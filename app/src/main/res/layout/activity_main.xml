<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="60dp"

        />
    <ImageView
        android:id="@+id/pic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_1"
        app:layout_constraintTop_toBottomOf="@+id/pic1"
        app:layout_constraintEnd_toEndOf="@+id/pic1"
        />
    <TextView
        android:id="@+id/tx1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Get Started"
        android:textSize="67dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="13dp"
        app:layout_constraintTop_toBottomOf="@id/pic2"
        />
    <TextView
        android:id="@+id/tx2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grow Together"
        android:textSize="18dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="13dp"
        app:layout_constraintTop_toBottomOf="@id/tx1"
        />
    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Now"
        android:backgroundTint="#000000"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/tx2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

